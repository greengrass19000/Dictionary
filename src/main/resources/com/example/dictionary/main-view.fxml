<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dictionary.DictionaryController">
   <children>
      <SplitPane dividerPositions="0.5" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <items>
            <AnchorPane maxHeight="1.7976931348623157E308" maxWidth="300.0" styleClass="left-pane">
               <children>
                  <ListView fx:id="searchResultPanel" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onMouseClicked="#readSelectedWord" AnchorPane.bottomAnchor="40.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="50.0" />
                  <TextField fx:id="searchInputField" layoutX="25.0" layoutY="14.0" maxWidth="50.0" onAction="#performSearch" promptText="Search for words..." AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="10.0" />
                  <Button maxWidth="25.0" mnemonicParsing="false" onAction="#performSearch" styleClass="search-button" text="→" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0" />
                  <ButtonBar buttonMinWidth="0.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" nodeOrientation="LEFT_TO_RIGHT" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
                     <buttons>
                        <Button mnemonicParsing="false" onMouseClicked="#switchToAddWord" styleClass="icon-button" text="">
                           <font>
                              <Font name="Font Awesome 5 Free Solid" size="15.0" />
                           </font>
                        </Button>
                        <Button mnemonicParsing="false" onMouseClicked="#removeWord" styleClass="icon-button" text="">
                           <font>
                              <Font name="Font Awesome 5 Free Solid" size="15.0" />
                           </font>
                        </Button>
                        <Button mnemonicParsing="false" onMouseClicked="#switchToEditWord" styleClass="icon-button" text="">
                           <font>
                              <Font name="Font Awesome 5 Free Solid" size="15.0" />
                           </font>
                        </Button>
                     </buttons>
                  </ButtonBar>
               </children>
            </AnchorPane>
            <AnchorPane fx:id="contentPanel" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" />
         </items>
      </SplitPane>
      <Label fx:id="errorDisplay" maxWidth="350.0" onMouseClicked="#hideMessage" text="ERROR" AnchorPane.bottomAnchor="20.0" AnchorPane.rightAnchor="20.0">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </Label>
   </children>
</AnchorPane>
