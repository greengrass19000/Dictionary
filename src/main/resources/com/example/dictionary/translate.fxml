<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.dictionary.components.TranslateController">
   <Label text="Translate text" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="15.0">
      <font>
         <Font name="System Bold" size="20.0"/>
      </font>
   </Label>
   <VBox AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0"
         AnchorPane.topAnchor="50.0">
      <TextField fx:id="inputField" alignment="TOP_LEFT" prefHeight="150.0">
         <VBox.margin>
            <Insets bottom="20.0"/>
         </VBox.margin>
      </TextField>
      <Button mnemonicParsing="false" onAction="#execute" text="Translate">
         <VBox.margin>
            <Insets bottom="20.0"/>
         </VBox.margin>
      </Button>
      <TextField fx:id="outputField" alignment="TOP_LEFT" prefHeight="150.0"/>
   </VBox>
</AnchorPane>
